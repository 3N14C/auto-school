generator client {
  provider        = "prisma-client-js"
  previewFeatures = ["driverAdapters"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Session {
  id String @id @default(cuid())

  expiresAt DateTime

  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)
  userId String
}

model User {
  id String @id @default(cuid())

  name     String
  password String
  phone    String @unique

  sessions Session[]

  reservations  Reservation? @relation(fields: [reservationId], references: [id])
  reservationId String?
}

model Category {
  id String @id @default(cuid())

  name         String
  description  String
  practice     String
  theory       String
  practiceExam String
  exam         String

  price       Int
  reservation Reservation[]
}

model Reservation {
  id String @id @default(cuid())

  reservationDate DateTime

  category   Category @relation(fields: [categoryId], references: [id])
  categoryId String

  user User[]
}

model Application {
  id String @id @default(cuid())

  name  String
  phone String @unique
}
